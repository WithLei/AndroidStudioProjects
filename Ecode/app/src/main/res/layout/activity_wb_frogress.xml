<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ecode.activity.WbFrogressActivity">

    <include layout="@layout/title_of_activity"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="#5ac2ff"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="项目描述"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"
            android:text="这个项目真的很好，这个项目真的很好，这个项目真的很好，这个项目真的很好,这个项目真的很好,这个项目真的很好"
            android:textColor="#ffffff"
            android:textSize="15sp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_marginLeft="20dp"
            android:background="#5ac2ff"
            android:layout_width="6dp"
            android:layout_height="match_parent"/>

        <ListView
            android:id="@+id/progress_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="20dp"
            android:divider="@null"
            android:layout_marginTop="10dp">
        </ListView>


    </FrameLayout>


</LinearLayout>
