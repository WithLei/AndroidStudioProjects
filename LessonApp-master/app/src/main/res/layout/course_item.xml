<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <ImageView 
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:id="@+id/course_image"
            android:src="@drawable/pictures_no"
            android:scaleType="fitXY"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="史上最牛的Java"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/course_name"
                android:layout_marginTop="2dp"
                />
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="教你学会java"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/course_introduction"
                android:layout_marginTop="5dp"
                />
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="免费"
                android:textSize="12sp"
                android:textColor="@color/title_background"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                />
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000人已报名"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/course_num"
                android:layout_marginTop="5dp"
                android:gravity="end"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/classes_line" 
        android:layout_marginLeft="10dp"
        />
</LinearLayout>
