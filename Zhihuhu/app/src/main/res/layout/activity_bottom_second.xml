<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.renly.zhihuhu.bottom_second">

<android.support.v4.view.ViewPager
    android:id="@+id/vp_secondbottom_ad"
    android:layout_width="match_parent"
    android:layout_height="100dp"/>
    <LinearLayout
        android:padding="5dp"
        android:layout_alignBottom="@id/vp_secondbottom_ad"
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_secondbottom_ad"
            android:padding="5dp"
            android:textColor="#FFFFFF"
            android:text="test"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/ll_secondbottom_adpoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" />
    </LinearLayout>
    <include layout="@layout/bottom_layout" />
</RelativeLayout>
