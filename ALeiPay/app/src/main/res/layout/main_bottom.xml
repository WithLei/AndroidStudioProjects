<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AAAAAA" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_main_bottom_mainpage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"/>

            <TextView
                android:id="@+id/tv_main_bottom_mainpage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="16sp"
                android:textColor="@color/bottom_unselect"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_main_bottom_invest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/financialfill"/>

            <TextView
                android:id="@+id/tv_main_bottom_invest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投资"
                android:textSize="16sp"
                android:textColor="@color/bottom_unselect"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_main_bottom_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mine"/>

            <TextView
                android:id="@+id/tv_main_bottom_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textSize="16sp"
                android:textColor="@color/bottom_unselect"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_main_bottom_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/setup"/>

            <TextView
                android:id="@+id/tv_main_bottom_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="16sp"
                android:textColor="@color/bottom_unselect"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>